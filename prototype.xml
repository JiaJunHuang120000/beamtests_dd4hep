	<PolyhedraRegular name="Scint_up_left_5" material="Polystyrene" numsides="6" rmin="hexagon_scint_rmin" rmax="hexagon_scint_rmax" thickness="scintillator_t" x_offset="up_left_x+cell_5_offset_x" y_offset="up_left_y+cell_5_offset_y" count="0" vis="AnlOrange" sensitive="true"/>
