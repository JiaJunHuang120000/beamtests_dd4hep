	<!-- bottom left -->
	<PolyhedraRegular name="Scint_dn_left_0" material="Polystyrene" numsides="6" rmin="hexagon_scint_rmin" rmax="hexagon_scint_rmax" thickness="scintillator_t" x_offset="dn_left_x+cell_0_offset_x" y_offset="dn_left_y+cell_0_offset_y" count="0" vis="AnlOrange" sensitive="true"/>
