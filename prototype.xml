	<PolyhedraRegular name="Frame_up_left_6" material="Polylactide" numsides="6" rmin="hexagon_frame_rmin" rmax="hexagon_frame_rmax" thickness="frame_t"	    x_offset="up_left_x+cell_6_offset_x" y_offset="up_left_y+cell_6_offset_y" count="0" vis="YellowVis" sensitive="false"/>
	<!-- megacell border frame -->
	<Box name="Frame_up_left_border_up"	material="Polylactide" x="megacell_frame_x" y="frame_w" thickness="frame_t" x_offset="up_left_x+megacell_up_frame_offset_x"	y_offset="up_left_y+megacell_up_frame_offset_y"	    count="0" vis="CyanVis" sensitive="false"/>
	<Box name="Frame_up_left_border_dn"	material="Polylactide" x="megacell_frame_x" y="frame_w" thickness="frame_t" x_offset="up_left_x+megacell_dn_frame_offset_x"	y_offset="up_left_y+megacell_dn_frame_offset_y"	    count="0" vis="CyanVis" sensitive="false"/>
	<Box name="Frame_up_left_border_left"	material="Polylactide" x="frame_w" y="megacell_frame_y" thickness="frame_t" x_offset="up_left_x+megacell_left_frame_offset_x"	y_offset="up_left_y+megacell_left_frame_offset_y"   count="0" vis="CyanVis" sensitive="false"/>
	<Box name="Frame_up_left_border_right"	material="Polylactide" x="frame_w" y="megacell_frame_y" thickness="frame_t" x_offset="up_left_x+megacell_right_frame_offset_x"	y_offset="up_left_y+megacell_right_frame_offset_y"   count="0" vis="CyanVis" sensitive="false"/>
	     
	<!-- up right -->
	<PolyhedraRegular name="Scint_up_right_0" material="Polystyrene" numsides="6" rmin="hexagon_scint_rmin" rmax="hexagon_scint_rmax" thickness="scintillator_t" x_offset="up_right_x+cell_0_offset_x" y_offset="up_right_y+cell_0_offset_y" count="0" vis="AnlOrange" sensitive="true"/>
